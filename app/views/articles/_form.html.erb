<!--Partial para formularios-->

<%= form_with(model: @article, local: true) do |f| %>
<!--%= form_for :article, url: articles_path do |f| %> <!--articles -> ir a la pagina que despliega la lista de artículos-->

  <!--Desplegar mensajes de error-->
  <% if @article.errors.any? %>

    <div id="error_explanation">
      
      <h2>
        <!-- internamente esto se encierra en una clase llamada field_with_errors, el cual se le puede editar con css-->
        <!--Pruralize -> es un helper que toma un número y una cadena como argumentos. Si el número es mayor que uno, la cadena se pluraliza automáticamente.-->
        <%= pluralize(@article.errors.count, "error") %> errores ocurrieron durante el proceso de guardar el artículo:
      </h2>

      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>

  <% end %>

  <p>
    <%= f.label :Título %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :Texto %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>

<% end %>